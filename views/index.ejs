<!DOCTYPE html>
<html>
  <head>
    <title>Ford Vision - Image Uploader</title>
    <link rel="stylesheet" href="/css/foundation.min.css">
    <link rel="stylesheet" href="/css/app.css">
  </head>

  <body>

    <!-- <div id="drop_zone" ondrop="dropHandler(event);" ondragover="dragOverHandler(event);"> -->
    <div class="upload_container" id="upload_container">
      <h4>UPLOAD<span>ING</span><img src="https://i.gifer.com/BXXg.gif" /></h4>

      <form id="uploader" enctype="multipart/form-data">
        <input type="file" name="photo" id="photo" multiple=false/>
      </form>

      <input type="text" id="search" placeholder="type to filter images" />

      <div class="callout primary" id="drop_zone">
        <p>Drag an image file to this Drop Zone ...</p>
      </div>

    </div>
    <div id="image_data">
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>tags</th>
            <th>coords</th>
            <th>source</th>
            <th>date</th>
            <th>actions</th>
          </tr>
        </thead>
        <tbody>
          <% photos.forEach(photo => { %>
            <tr>
              <td><%- photo.thumbnailTag %></td>
              <td><%= photo.scores %></td>
              <td><%= photo.bestCoords.coords %></td>
              <td>
                <%- photo.mapTag %>
                <%= photo.bestCoords.source %>
              </td>
              <td><%= photo.createdAt %></td>
              <td> <a href="#" class="delete_action">X</a> </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>


    <script src="/js/photos.js" type="text/javascript"></script>

  </body>
</html>
